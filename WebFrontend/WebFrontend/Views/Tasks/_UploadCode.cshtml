<h3>Upload Your Code Here</h3>
@using (Html.BeginForm ("UploadFiles",
                        "Tasks",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{ 
    @Html.Hidden("Task_ID", (int)ViewBag.Task_ID)
    
    <div class="form-group">
        <label for="files" class="col-sm-2 control-label">Filename:</label>
        <div class="col-sm-10">            
            @Html.TextBox("files", "", new { type = "file", multiple = "true" })
        </div>
    </div>
    
    <div class="form-group">
        <label for="OwnerNotes" class="col-sm-2 control-label">Notes on submission:</label>
        <div class="col-sm-10">
            @Html.TextArea("OwnerNotes")
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Submit</button>
        </div>
    </div>
}