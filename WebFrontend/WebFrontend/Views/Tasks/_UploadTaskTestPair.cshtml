@model WebFrontend.Models.OCAPETask

<h3>Upload a test set</h3>
<p>The test file should contain the inputs, while the output file should contain the correct results for the given inputs.</p>

@using (Html.BeginForm("UploadTestPair", "Tasks", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.ID)
    <div class="form-group">
        <label for="test">Test File:</label>
        <input type="file" name="test" id="test" />

        <label for="output">Output File:</label>
        <input type="file" name="output" id="output" />
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
}